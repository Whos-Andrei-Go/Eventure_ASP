@model Eventure_ASP.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null; // Disable the shared layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="~/css/login.css" rel="stylesheet" />
    <title>@ViewData["Title"] - Eventure_ASP</title>
    <style>
        body {
            overflow: hidden; /* Prevent scrolling */
        }

        .login-container {
            height: 100%; /* Ensure the login container takes full height */
            display: flex;
            flex-direction: column;
            justify-content: center; /* Center content vertically */
        }

        .card {
            height: 400px; /* Set a fixed height for the card */
            overflow: auto; /* Allow scrolling within the card if necessary */
        }
    </style>
</head>
<body>
    <div class="container-fluid vh-100 p-0">
        <div class="row vh-100 m-0">
            <!-- Added m-0 to remove margin -->
            <div class="col-md-6 d-flex justify-content-center align-items-center bg-purple text-white">
                <div class="text-center">
                    <img src="~/images/logo.png" alt="Logo" class="img-fluid" style="max-width: 80%; height: auto;" />
                </div>
            </div>
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <div class="login-container text-center">
                    <h1 class="header" style="font-family: 'Riffic Free Medium'; font-size: 64px; margin-bottom: 30px;">Login</h1>
                    <form asp-action="Login" method="post">
                        <div class="mb-4">
                            <label for="Username" class="form-label">Username:</label>
                            <input type="text" class="form-control" id="Username" name="Username" required />
                        </div>
                        <div class="mb-4">
                            <label for="Password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="Password" name="Password" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100" style="font-size: 24px;">Login</button>
                    </form>

                    <!-- Validation Summary -->
                    <div asp-validation-summary="All" class="text-danger mt-3"></div> <!-- This will display the error messages -->

                    <div class="text-start mt-3">
                        <a href="@Url.Action("Register", "Account")" style="font-size: 18px;">Create an account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>