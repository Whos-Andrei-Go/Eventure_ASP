@model Eventure_ASP.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/checkout.css" />
</head>
<body>
    <div class="container">
        <h1 class="header text-center">CHECKOUT</h1>

        <!-- Display success message if it exists -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Your Cart</h5>
                    </div>
                    <div class="card-body" id="cartItems">
                        @if (Model.CartTickets != null && Model.CartTickets.Any())
                        {
                            foreach (var ticket in Model.CartTickets)
                            {
                                <div class="checkout-item">
                                    <h6>@ticket.TicketType.Name</h6>
                                    <p>Price: @ticket.TicketType.Price.ToString("C")</p>
                                    <p>Quantity: @ticket.Quantity</p>
                                    <p>Total: @(ticket.TicketType.Price * ticket.Quantity)</p>
                                    <hr />
                                </div>
                            }
                        }
                        else
                        {
                            <p>Your cart is empty.</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Checkout Details</h5>
                    </div>
                    <div class="card-body">
                        <h6>Total Price: @Model.CartTotal.ToString("C")</h6>
                        <form asp-action="EnterPaymentMethod" method="post">
                            <button type="submit" class="btn btn-primary">Complete Checkout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>